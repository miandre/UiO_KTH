<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
    android:background="@drawable/listbg"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Do you want to add this project?"
        android:textAllCaps="true"
        android:id="@+id/tv_imp_proj_add"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginTop="30dp"
        android:shadowRadius="5"
        android:padding="5dp"
        android:textAlignment="center" />


    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="7dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/listbg">


        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_imp_proj_icon"
            android:text="A"
            android:textSize="50dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="7dp"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_imp_proj_name"
                android:text=" "
                android:gravity="left"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_imp_proj_id"
                android:text="Project ID"
                android:gravity="left"
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:id="@+id/bt_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/check"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:id="@+id/bt_not_add"
            android:background="@drawable/cancel"
            android:layout_alignTop="@+id/bt_add"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</LinearLayout>