<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:weightSum="1"
    android:paddingTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tmp_projectName"
        android:id="@+id/tvProjectName"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"/>

    <ListView
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:id="@+id/lv_persons"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.45"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:background="@drawable/listbg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="total_expences"
        android:id="@+id/tv_total_expences"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:id="@+id/bBack"
            android:layout_alignTop="@+id/bChat"
            android:layout_marginStart="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"

            android:background="@drawable/back" />

        <Button
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:id="@+id/bChat"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:background="@drawable/chat2" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:id="@+id/bShare2"
            android:layout_alignBottom="@+id/bt_add_trans"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/share" />

        <Button
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:id="@+id/bt_calculate"
            android:layout_alignTop="@+id/bShare2"
            android:layout_alignParentEnd="true"
            android:background="@drawable/calculate" />

        <Button
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:id="@+id/bt_add_trans"
            android:background="@drawable/add"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/bShare2"
            android:layout_marginLeft="40dp" />
    </RelativeLayout>

</LinearLayout>
