<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tmp_projectName"
        android:id="@+id/tvProjectName"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"/>

    <ListView
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:id="@+id/lv_persons"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.45"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:background="@drawable/listbg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="total_expences"
        android:id="@+id/tv_total_expences"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:id="@+id/bShare2"
            android:layout_alignBottom="@+id/bt_add_trans"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/share" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/bShare2"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:id="@+id/bt_add_trans"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add" />
    </RelativeLayout>
</LinearLayout>